<view class="{{((('cy-grid')+' '+((theme==='card')?'cy-grid--card':''))+' '+customClass)}}"><block a:if="{{column>0}}"><view class="{{(('cy-grid__content')+' '+customClassContent)}}" style="{{(contentStyle)}}"><slot></slot></view></block><block a:else><view class="{{(('cy-grid__content')+' '+customClassContent)}}"><scroll-view class="{{(('cy-grid__scroll-view')+' '+customClassScrollView)}}" style="{{('white-space: nowrap;'+contentStyle)}}" scroll-x="{{true}}" scroll-with-animation="{{true}}" scroll-left="{{scrollLeft}}" data-event-opts="{{[['scroll',[['handleScroll',['$event']]]]]}}" onScroll="__e"><slot></slot></scroll-view><block a:if="{{indicator}}"><view class="cy-grid__indicator"><view class="cy-grid__indicator--line"><view class="cy-grid__indicator--line-bar" style="{{'transform:'+('translateX('+scrollValue+'%)')+';'}}"></view></view></view></block></view></block></view>